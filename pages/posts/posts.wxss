/* pages/posts/posts.wxss */

swiper{
  width: 100%;
  height: 460rpx;
}
swiper image{
  width: 100%;
  height: 460rpx;
}

.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #ffffff;
  border-top: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-title{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 22px;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post_author_date{
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date{
  margin-left: 20rpx;
}

.post-content{
  margin-left: 5px;
  margin-right: 5px;
}

.post-like{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.post-like-image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.post-like-font{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
